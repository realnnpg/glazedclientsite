<Layout title="Glazed - Version Archive">
  <div class="pt-32 pb-20 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6">
        <span class="text-white">Version </span>
        <span class="text-brand-primary text-glow">Archive</span>
      </h1>
      <p class="text-gray-400 text-xl max-w-2xl mx-auto">
        Historical versions of Glazed Client. Naming conventions may vary.
      </p>
    </div>

    <div class="space-y-12 relative before:absolute before:inset-0 before:ml-5 before:-translate-x-px md:before:mx-auto md:before:translate-x-0 before:h-full before:w-0.5 before:bg-linear-to-b before:from-transparent before:via-brand-primary/50 before:to-transparent">
      {releases.map((release) => (
        <div class="relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group is-active">
            <!-- Timeline Dot -->
            <div class="flex items-center justify-center w-10 h-10 rounded-full border border-brand-primary bg-brand-dark shadow-[0_0_10px_rgba(155,60,255,0.5)] shrink-0 md:order-1 absolute left-0 md:left-1/2 translate-x-0 md:-translate-x-1/2 z-10">
                <div class="w-3 h-3 bg-brand-primary rounded-full"></div>
            </div>

            <!-- Card -->
            <Card class="w-[calc(100%-4rem)] md:w-[calc(50%-2.5rem)] ml-auto md:ml-0 p-6 hover:border-brand-primary/50 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div>
                         <h2 class="text-2xl font-bold text-white mb-1">{release.version}</h2>
                         <span class="text-sm font-mono text-gray-500">{release.date}</span>
                    </div>
                </div>

                {release.changelog && (
                    <div class="mb-6">
                        <h3 class="text-sm font-bold text-gray-300 uppercase mb-2">Changes:</h3>
                        <ul class="list-disc list-inside text-gray-400 text-sm space-y-1">
                            {release.changelog.map(line => <li>{line}</li>)}
                        </ul>
                    </div>
                )}

                <div class="space-y-3">
                    {release.assets.map(asset => (
                        <div class="bg-black/30 rounded p-3 border border-white/5 flex flex-col gap-2">
                            <div class="flex justify-between items-center">
                                <span class="text-brand-primary font-mono text-sm truncate">{asset.name}</span>
                                <span class="text-gray-500 text-xs shrink-0">{asset.size}</span>
                            </div>
                             <div class="flex items-center justify-between gap-3">
                                <code class="text-[10px] text-gray-600 font-mono truncate max-w-[200px] select-all" title="Click to copy SHA256">{asset.sha256}</code>
                                <Button href={asset.url} size="sm" class="shrink-0 text-xs px-3 py-1 h-7">Download</Button>
                            </div>
                        </div>
                    ))}
                </div>
            </Card>
        </div>
      ))}
    </div>
  </div>
</Layout>
