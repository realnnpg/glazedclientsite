---

<Layout title="Glazed - Features">
	<div class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6">
                <span class="text-white">Feature </span>
                <span class="text-brand-primary text-glow">List</span>
            </h1>
            <p class="text-gray-400 text-xl max-w-2xl mx-auto mb-8">Explore the powerful modules included in Glazed.</p>
            
            <!-- Legend -->
            <div class="flex flex-wrap justify-center gap-4 text-sm font-mono">
                <div class="flex items-center gap-2 bg-brand-surface px-4 py-2 rounded-full border border-white/5">
                    <span class="w-3 h-3 rounded-full bg-green-500 shadow-[0_0_10px_rgba(34,197,94,0.5)]"></span>
                    <span class="text-green-400">Undetectable</span>
                </div>
                <div class="flex items-center gap-2 bg-brand-surface px-4 py-2 rounded-full border border-white/5">
                    <span class="w-3 h-3 rounded-full bg-yellow-500 shadow-[0_0_10px_rgba(234,179,8,0.5)]"></span>
                    <span class="text-yellow-400">Use at Risk</span>
                </div>
                <div class="flex items-center gap-2 bg-brand-surface px-4 py-2 rounded-full border border-white/5">
                    <span class="w-3 h-3 rounded-full bg-red-500 shadow-[0_0_10px_rgba(239,68,68,0.5)]"></span>
                    <span class="text-red-400">Highly Detectable</span>
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="space-y-20">
            {categories.map(category => (
                <section>
                    <div class="flex items-center gap-4 mb-8 border-b border-white/5 pb-4">
                        <div class="w-10 h-10 text-brand-primary bg-brand-primary/10 rounded-full p-2 flex items-center justify-center border border-brand-primary/20">
                            <svg class="w-full h-full" viewBox="0 0 24 24" fill="none" stroke="currentColor" set:html={category.icon}></svg>
                        </div>
                        <h2 class="text-3xl font-heading font-bold text-white">{category.title}</h2>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {category.features.map(feature => (
                            <Card class="hover:bg-brand-surface-highlight transition-colors group">
                                <div class="flex justify-between items-start mb-3">
                                    <div class="flex items-start gap-3">
                                        <div class="w-8 h-8 rounded-lg bg-brand-dark/50 flex items-center justify-center text-brand-primary border border-white/5 group-hover:border-brand-primary/30 transition-colors mt-1 shrink-0">
                                            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" set:html={feature.icon}></svg>
                                        </div>
                                        <h3 class="text-lg font-bold text-white leading-tight pt-1.5">{feature.name}</h3>
                                    </div>
                                    <span class:list={[
                                        "shrink-0 text-[10px] uppercase font-bold tracking-wider px-2 py-1 rounded mt-1 border",
                                        feature.risk === 'safe' ? "bg-green-500/10 text-green-400 border-green-500/20" :
                                        feature.risk === 'medium' ? "bg-yellow-500/10 text-yellow-400 border-yellow-500/20" :
                                        "bg-red-500/10 text-red-400 border-red-500/20"
                                    ]}>
                                        {feature.risk === 'safe' ? 'Safe' : feature.risk === 'medium' ? 'Risk' : 'Unsafe'}
                                    </span>
                                </div>
                                <p class="text-gray-400 text-sm pl-[44px]">{feature.description}</p>
                            </Card>
                        ))}
                    </div>
                </section>
            ))}
        </div>
    </div>
</Layout>
