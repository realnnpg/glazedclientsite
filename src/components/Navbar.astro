---
import Button from "./Button.astro";
import { Image } from "astro:assets";

const navLinks = [
  { name: "Home", href: "/" },
  { name: "Features", href: "/features" },
  { name: "Downloads", href: "/downloads" },
  { name: "Archive", href: "/archive" },
  { name: "FAQ", href: "/faq" },
  { name: "Credits", href: "/credits" },
];

const currentPath = Astro.url.pathname;
---

<nav
  class="fixed top-0 w-full z-50 bg-brand-dark/80 backdrop-blur-xl border-b border-white/5"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div
        class="shrink-0 flex items-center gap-3 cursor-pointer group"
        onclick="window.location.href='/'"
      >
        <div
          class="w-8 h-8 flex items-center justify-center transition-transform duration-300 group-hover:rotate-12"
        >
          <img
            src="/logo.png"
            alt="Glazed Logo"
            width={32}
            height={32}
            class="w-full h-full object-contain drop-shadow-[0_0_8px_rgba(155,60,255,0.5)]"
          />
        </div>
        <span class="font-heading font-bold text-xl tracking-tight text-white">
          GLAZED
        </span>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:block">
        <div class="flex items-baseline space-x-8">
          {
            navLinks.map((link) => (
              <a
                href={link.href}
                class:list={[
                  "text-sm font-medium transition-colors duration-200 relative group py-2",
                  currentPath === link.href
                    ? "text-white"
                    : "text-gray-400 hover:text-brand-primary",
                ]}
              >
                {link.name}
                <span
                  class:list={[
                    "absolute bottom-0 left-0 w-full h-0.5 bg-brand-primary transform transition-transform duration-300 origin-left",
                    currentPath === link.href
                      ? "scale-x-100 shadow-[0_0_10px_#9B3CFF]"
                      : "scale-x-0 group-hover:scale-x-100",
                  ]}
                />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Right Side Actions -->
      <div class="hidden md:flex items-center gap-4">
        <a
          href="https://discord.gg/glazedclient"
          target="_blank"
          class="text-gray-400 hover:text-[#5865F2] transition-colors"
        >
          <span class="sr-only">Discord</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037 3.112 3.112 0 0 0-.593 1.227 18.297 18.297 0 0 0-5.517 0 3.108 3.108 0 0 0-.6 1.223.074.074 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
            ></path>
          </svg>
        </a>
        <Button href="/downloads" size="sm">Download Now</Button>
      </div>

      <!-- Mobile menu button -->
      <div class="-mr-2 flex md:hidden">
        <button
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-white/10 focus:outline-none"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>
