---
const currentYear = new Date().getFullYear();
import { Image } from "astro:assets";
---

<footer class="bg-brand-dark border-t border-white/5 relative overflow-hidden">
    <!-- Background Grid Effect -->
    <div
        class="absolute inset-0 pointer-events-none opacity-[0.03] bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-size-[24px_24px]"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
            <div class="col-span-1 md:col-span-2">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-8 h-8 flex items-center justify-center">
                        <Image
                            src="/logo.png"
                            alt="Glazed Logo"
                            width={32}
                            height={32}
                            class="w-full h-full object-contain opacity-80 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
                        />
                    </div>
                    <span class="font-heading font-bold text-lg text-white"
                        >GLAZED</span
                    >
                </div>
                <p class="text-gray-400 max-w-xs mb-4">
                    The ultimate Meteor Client addon for DonutSMP. Enhanced PvP,
                    utility, and automation features.
                </p>
                <div class="flex space-x-4">
                    <!-- Social Links -->
                    <a
                        href="https://discord.gg/glazedclient"
                        class="text-gray-400 hover:text-[#5865F2] transition-colors"
                    >
                        <span class="sr-only">Discord</span>
                        <svg
                            class="h-6 w-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037 3.112 3.112 0 0 0-.593 1.227 18.297 18.297 0 0 0-5.517 0 3.108 3.108 0 0 0-.6 1.223.074.074 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="https://github.com/realnnpg/Glazed"
                        class="text-gray-400 hover:text-white transition-colors"
                    >
                        <span class="sr-only">GitHub</span>
                        <svg
                            class="h-6 w-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <div>
                <h3 class="text-white font-bold mb-4">Navigation</h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/"
                            class="text-gray-400 hover:text-brand-primary transition-colors"
                            >Home</a
                        >
                    </li>
                    <li>
                        <a
                            href="/downloads"
                            class="text-gray-400 hover:text-brand-primary transition-colors"
                            >Downloads</a
                        >
                    </li>
                    <li>
                        <a
                            href="/archive"
                            class="text-gray-400 hover:text-brand-primary transition-colors"
                            >Archive</a
                        >
                    </li>
                    <li>
                        <a
                            href="/features"
                            class="text-gray-400 hover:text-brand-primary transition-colors"
                            >Features</a
                        >
                    </li>
                    <li>
                        <a
                            href="/faq"
                            class="text-gray-400 hover:text-brand-primary transition-colors"
                            >FAQ</a
                        >
                    </li>
                </ul>
            </div>
            <div>
                <h3 class="text-white font-bold mb-4">Legal</h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/credits"
                            class="text-gray-400 hover:text-brand-primary transition-colors"
                        >
                            Credits
                        </a>
                    </li>
                    <li>
                        <a
                            href="/terms"
                            class="text-gray-400 hover:text-brand-primary transition-colors"
                        >
                            Terms
                        </a>
                    </li>
                    <li>
                        <a
                            href="/privacy"
                            class="text-gray-400 hover:text-brand-primary transition-colors"
                        >
                            Privacy
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="border-t border-white/5 pt-8 mt-8 text-center text-gray-500 text-sm"
        >
            <p>
                &copy; {currentYear} Glazed Client. Not affiliated with Mojang or
                Microsoft.
            </p>
        </div>
    </div>
</footer>
